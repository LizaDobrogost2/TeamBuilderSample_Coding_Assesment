<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TeamBuilder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TeamBuilder.TeamMemberList.Application"
    xmlns:addTeamMembers="clr-namespace:TeamBuilder.TeamMembers.Application.AddTeamMembers"
    
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="The Team"
        ContentTemplate="{DataTemplate local:TeamMembersPage}"
        Route="MainPage" />

    <ShellContent
        Title="Add Member(s)"
        ContentTemplate="{DataTemplate addTeamMembers:AddTeamMembersPage}"
        Route="Add" />

</Shell>

